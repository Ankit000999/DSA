#include <iostream>
using namespace std;
int main(){
        int n =5;
      for (int i=0;i<n;i++)//rows ke liye 1,2,3,4,5
        {
            // space ke liye
        for(int j=0;j<i;j++)
         {
          cout<<" ";
   }
    for (int j =0;j<2*n-(2*i+1);j++)
    {
    cout<<"*";
        
    }
        
    //space ke liye
    for(int j=0;j<i;j++)
         {
          cout<<" ";
    }
    cout<<endl;
 }
	return 0;
}