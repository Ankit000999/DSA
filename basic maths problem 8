/*Write a program that takes an integer as
input and prints whether it is even or odd.*/

#include <bits/stdc++.h>
using namespace std;
int main() {
   int n;
   cin>>n;
if (n%2==!0){ 
 cout <<n<<" is a odd number.";
}
 if (n%2==0) {
     cout <<n<<" is a even number."; 
}
    return 0;
}